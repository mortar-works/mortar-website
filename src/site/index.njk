  <section id="insights">
    <div class="wrapper">
      <div class="section-head">
        <h2>Insights</h2>
        <p class="section-tagline">
          Mortar makes the application of intelligence, data, and user-led design
          easier and more affordable; to inspire services, experiences, and
          relationships to be more accessible and inclusive. Read our insights to
          find out how we are applying technology to build better services.
        </p>
      </div>

      <ul id="insight-list">
        {% for post in collections.insights %}
        <li class="{% if loop.index > 6 %}hidden{% endif %}">
          <a
            class="insight-title"
            href="{{ post.url }}"
            aria-label="Insight: {{ post.data.title }}"
          >
            <div
              class="insight-image"
              style="background-image: url('{{ '/static/images/insights/' + post.data.image | url }}')"
            >
              <div class="hover-overlay"></div>
            </div>
            <div class="insight-details">
              <time datetime="{{ post.data.date | w3date }}">{{ post.data.date | date }}</time>
              {{ post.data.title }}
            </div>
          </a>
        </li>
        {% endfor %}
      </ul>

      <button id="load-more-insights" class="cta">Load More Insights</button>
      <div id="insights-preloader" class="hidden">
        <div class="spinner"></div>
      </div>
    </div>
  </section>
