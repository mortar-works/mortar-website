---
title: Welcome
name: homepage
---

{% extends 'layouts/base.njk' %}

{% block pageTitle %}{{ title }} - {{ super() }}{% endblock %}
{% block bodyId %}{{ name }}{% endblock %}

{% block content %}

  <!-- Topline Section -->
  <section id="topline">
    <div class="wrapper">
      <h1>Redefining relationships between people, places, and property</h1>
      <p class="toplinep">Mortar is a technology company building better services. Our products and solutions are driving the next generation of intelligent, accessible, user-led services.</p>
      <a class="cta light" href="#use-cases">Learn about our work</a>
    </div>
  </section>

  <!-- Features Section -->
  <section id="features">
    <div class="wrapper">
      <div class="section-head">
        <h1>How <span class="mortar-purple">Mortar</span> can help to <span class="mortar-purple">transform your services</span></h1>
        <p class="section-tagline"></p>
      </div>

      <div id="feature-list">
        <ul>
          {% for feature in features %}
          <li>
            <h3>{{ feature.title }}</h3>
            <p class="feature-tagline">{{ feature.tagline }}</p>
            {{ feature.subfeatures | markdown | safe }}
            <a href="{{ feature.link }}" class="learn-more">{{ feature.learnMoreText }}</a>
          </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </section>

  <!-- Partners Section -->
  <section id="partners">
    <div class="partners-wrapper">
      <h2 class="partners-heading">Reaching 1000s of users and businesses</h2>
      <div class="partners-ticker">
        <ul class="partners-list">
          <li><img src="{{ '/static/images/partners/lga_logo.png' | url }}" alt="Local Government Association logo" /></li>
          <li><img src="{{ '/static/images/partners/gla_logo2.jpeg' | url }}" alt="Greater London Authority logo" /></li>
          <li><img src="{{ '/static/images/partners/havering-council.png' | url }}" alt="Havering Council logo" /></li>
          <li><img src="{{ '/static/images/partners/Hackney-Logo.png' | url }}" alt="Hackney Council logo" /></li>
          <li><img src="{{ '/static/images/partners/Clarion-Housing-Group-Logo.png' | url }}" alt="Clarion Housing Group logo" /></li>
          <li><img src="{{ '/static/images/partners/salford02.png' | url }}" alt="Salford City Council logo" /></li>
          <li><img src="{{ '/static/images/partners/eastriding1.png' | url }}" alt="East Riding of Yorkshire logo" /></li>
          <li><img src="{{ '/static/images/partners/humberandnorth.png' | url }}" alt="Humber and North Yorkshire Integrated Care Partnership logo" /></li>
          <li><img src="{{ '/static/images/partners/walthamforest01.png' | url }}" alt="Waltham Forest logo" /></li>
          <li><img src="{{ '/static/images/partners/Worcestershire-County-Council-logo.png' | url }}" alt="Worcestershire County Council logo" /></li>
          <li><img src="{{ '/static/images/partners/socialfinance01.png' | url }}" alt="Social Finance logo" /></li>
          <li><img src="{{ '/static/images/partners/mayoroflondonlogo01.png' | url }}" alt="Mayor of London logo" /></li>
        </ul>
      </div>
    </div>
  </section>

  <!-- Use Cases Section -->
  <section id="use-cases" class="shared-section-background">
    <div class="use-cases-wrapper">
      <h2>Our Use Cases</h2>
      <p class="usecasep">We work to maximize the impact of services. Learn how Mortar brings together global tools to solve complex service challenges.</p>

      <div class="use-cases-grid">
        {% for case in collections.useCases %}
        <div class="use-case-card">
          <h3>{{ case.title }}</h3>
          <h4 class="strapline">{{ case.strapline }}</h4>
          <p class="usecasecardp">{{ case.description }}</p>
          <a href="{{ case.link }}" class="learn-more-link">Learn More</a>
        </div>
        {% endfor %}
      </div>
    </div>
  </section>

  <!-- Case Studies Section -->
  <section id="case-studies" class="shared-section-background">
    <div class="case-studies-wrapper">
      <h2>Case Studies</h2>
      <p>Explore how weâ€™ve successfully delivered tailored solutions for our clients through our case studies.</p>

      <div class="case-studies-grid">
        {% for study in collections.caseStudies %}
               <div class="case-study-sentence">
            <h4>Case Study</h4>
            <img src="{{ case.image }}" alt="{{ case.title }} image" class="case-study-image" />
            {{ case.case_study_sentence }}
            <a href="{{ case.read_more_link }}" class="read-more-link">Read More</a>
          </div>
        {% endfor %}
      </div>
    </div>
  </section>

  <!-- Solutions Section -->
  <section id="solutions" class="shared-section-background">
    <div class="solutions-wrapper">
      <h2>Solutions</h2>
      <p>Discover the range of solutions we offer, from service design to data and intelligence solutions.</p>

      <div class="solutions-grid">
        {% for solution in collections.solutions %}
        <div class="solution-card">
          <h3>{{ solution.title }}</h3>
          <p>{{ solution.description }}</p>
          <a href="{{ solution.link }}" class="learn-more-link">Explore Solution</a>
        </div>
        {% endfor %}
      </div>
    </div>
  </section>

  <!-- Insights Section -->
  <section id="insights">
    <div class="wrapper">
      <div class="section-head">
        <h2>Insights</h2>
        <p class="section-tagline">Find out how Mortar applies technology to build better services.</p>
      </div>

      <ul id="insight-list">
        {% for post in collections.insights %}
        <li class="{% if loop.index > 6 %}hidden{% endif %}">
          <a class="insight-title" href="{{ post.url }}">
            <div class="insight-image" style="background-image: url('{{ '/static/images/insights/' + post.data.image | url }}')">
              <div class="hover-overlay"></div>
            </div>
            <div class="insight-details">
              <time datetime="{{ post.data.date | w3date }}">{{ post.data.date | date }}</time>
              {{ post.data.title }}
            </div>
          </a>
        </li>
        {% endfor %}
      </ul>

      <button id="load-more-insights" class="cta">Load More Insights</button>
      <div id="insights-preloader" class="hidden">
        <div class="spinner"></div>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
 <section id="contact">
  <div class="wrapper contact-wrapper">
    <!-- Left Column: Contact Info -->
    <div class="contact-info">
      <h2>Get in Touch</h2>
      <p>Interested in learning more about one of our products or tools, need technical support, or want to discuss a project? Fill out our form and we will be in touch with you soon.</p>

      <!-- Two Columns for Contact Info -->
      <div class="contact-columns">
        <!-- First Column: Email and Phone -->
        <div class="contact-column">
          <div class="contact-item">
            <strong>Email:</strong>
            <span>office@mortar.works</span>
          </div>
          <div class="contact-item">
            <strong>Phone:</strong>
            <span>020 8374 2322</span>
          </div>
        </div>

        <!-- Second Column: Office Address -->
        <div class="contact-column">
          <div class="contact-item">
            <strong>Office Address:</strong>
            <span>Mortar Works Ltd</span>
            <span>66 High Street</span>
            <span>Lewes, BN7 1XG</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Right Column: Contact Form in a Card -->
    <div class="contact-form-card">
      <form id="contactForm">
        <div>
          <label for="name">Name</label>
          <input type="text" id="name" name="name" required>
        </div>
        
        <div>
          <label for="email">Email</label>
          <input type="email" id="email" name="email" required>
        </div>

        <div>
          <label for="reason">What is the reason for getting in touch?</label>
          <select id="reason" name="reason">
            <option value="General Enquiry">General Enquiry</option>
            <option value="Demo">Demo of an existing tool or product</option>
            <option value="Service Design Support">Service Design Support</option>
            <option value="Technical Consultancy">Technical Consultancy</option>
            <option value="Product Development">Product Development</option>
            <option value="Data Solutions">Data and Intelligence Solutions</option>
            <option value="None">None of the above</option>
          </select>
        </div>

        <div>
          <label for="message">Message</label>
          <textarea id="message" name="message" required></textarea>
        </div>

        <button type="submit">Send Message</button>
      </form>
    </div>
  </div>
</section>

{% endblock %}
