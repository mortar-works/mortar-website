{% extends 'layouts/base.njk' %}

{% block pageTitle %}{{ title }} - Case Studies - {{ super() }}{% endblock %}
{% block bodyId %}{{ title | slug }}{% endblock %}
{% block mainClass %}case-study content-page{% endblock %}

{% set previousPost = collections.caseStudies | getPreviousCollectionItem(page) %}
{% set nextPost = collections.caseStudies | getNextCollectionItem(page) %}

{% block content %}
<section>
  <!-- Updated image handling -->
  <div class="hero-image" style="background-image: url('{{ caseStudy.data.image | url }}')"></div>
  <div class="wrapper">
    <article>
      <h1>{{ title }}</h1>
      {{ content | safe }}
    </article>

    <p class="case-study-get-in-touch">
      <a class="cta" href="https://draft.mortar.works/#contact" target="_blank" rel="noopener">Get in touch</a>
    </p>

    <div class="other-content">
      {% if previousPost %}
        <div class="previous-post">
          <a href="{{ previousPost.url }}">
            <span>Previous case study</span>
            {{ previousPost.data.title }}
          </a>
        </div>
      {% endif %}
      {% if nextPost %}
        <div class="next-post">
          <a href="{{ nextPost.url }}">
            <span>Next case study</span>
            {{ nextPost.data.title }}
          </a>
        </div>
      {% endif %}
    </div>
  </div>
</section>
{% endblock %}
